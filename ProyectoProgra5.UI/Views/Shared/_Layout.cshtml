<!DOCTYPE html>
<html lang="en">
<head>
    <title>Campus Institucional</title>
    <!-- HTML5 Shim and Respond.js IE11 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 11]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Phoenixcoded" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/assets/images/favicon.ico" type="image/x-icon" />

    <!-- vendor css -->
    <link rel="stylesheet" href="~/assets/css/style.css" />
</head>
<body class="">
    <!-- [ Pre-loader ] start -->
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <!-- [ Pre-loader ] End -->
    <!-- [ navigation menu ] start -->
    <nav class="pcoded-navbar menu-light">
        <div class="navbar-wrapper">
            <div class="navbar-content scroll-div">

                <ul class="nav pcoded-inner-navbar">
                    <li class="nav-item pcoded-menu-caption">
                        <label>Navegación</label>
                    </li>
                    @{var Rol = Usuario.RolDescripcion;

                        switch (Rol)
                        {
                            case "Administrador":
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-home"></i></span><span class="pcoded-mtext">Inicio</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="CalificacionesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-file-text"></i></span><span class="pcoded-mtext">Calificaciones</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="GradosCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-layers"></i></span><span class="pcoded-mtext">Grados</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="GruposCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-users"></i></span><span class="pcoded-mtext">Grupos</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="InstitucionesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-box"></i></span><span class="pcoded-mtext">Instituciones</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="MateriasCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-book"></i></span><span class="pcoded-mtext">Materias</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="RolesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-unlock"></i></span><span class="pcoded-mtext">Roles</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="TipoOperacionesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-repeat"></i></span><span class="pcoded-mtext">Tipo de operaciones</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="TipoPeriodoCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-list"></i></span><span class="pcoded-mtext">Tipo de periodo</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="UsuariosCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-user"></i></span><span class="pcoded-mtext">Usuarios</span>
                                    </a>
                                </li>

                                break;
                            case "Profesor":
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="CalificacionesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-file-text"></i></span><span class="pcoded-mtext">Calificaciones</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="GruposCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-users"></i></span><span class="pcoded-mtext">Grupos</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="MateriasCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-book"></i></span><span class="pcoded-mtext">Materias</span>
                                    </a>
                                </li>
                                break;
                            case "Estudiante":
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="" asp-controller="CalificacionesCAPI" asp-action="Index">
                                        <span class="pcoded-micon"><i class="feather icon-file-text"></i></span><span class="pcoded-mtext">Calificaciones</span>
                                    </a>
                                </li>
                                break;
                        }

                    }


                </ul>

            </div>
        </div>
    </nav>
    <!-- [ navigation menu ] end -->
    <!-- [ Header ] start -->
    <header class="navbar pcoded-header navbar-expand-lg navbar-light header-blue">
        <div class="m-header">
            <a class="mobile-menu" id="mobile-collapse" href="#!"><span></span></a>
            <a href="#!" class="b-brand">
                <!-- ========   change your logo hear   ============ -->
                <h5 class="text-light">Campus Institucional</h5>
            </a>
            <a href="#!" class="mob-toggler">
                <i class="feather icon-more-vertical"></i>
            </a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="#!" class="pop-search">
                        <i class="feather icon-search"></i>
                    </a>
                    <div class="search-bar">
                        <input type="text"
                               class="form-control border-0 shadow-none"
                               placeholder="Search hear" />
                        <button type="button" class="close" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </li>
            </ul>
        </div>
    </header>
    <!-- [ Header ] end -->
    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-content">
            <!-- [ breadcrumb ] start -->
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Campus</h5>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="index.html"><i class="feather icon-home"></i></a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="#!">Inicio de la aplicación</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- [ breadcrumb ] end -->
            <!-- [ Main Content ] start -->
            <div class="row bg-light p-3" style="border-radius: 15px">
                <div class="col-lg-12 col-md-12">
                    @RenderBody()

                </div>
            </div>
        </div>
    </div>

    <!-- Required Js -->
    <script src="~/assets/js/vendor-all.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/assets/js/ripple.js"></script>
    <script src="~/assets/js/pcoded.min.js"></script>

    <!-- Apex Chart -->
    <script src="~/assets/js/plugins/apexcharts.min.js"></script>

    <!-- custom-chart js -->
    <script src="~/assets/js/pages/dashboard-main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
