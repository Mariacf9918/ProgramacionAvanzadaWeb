
@model ProyectoProgra5.UI.Models.Grupo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdGrupo" />
            <div class="form-group">
                <label asp-for="IdGrado" class="control-label"></label>
                <select asp-for="IdGrado" class="form-control" asp-items="ViewBag.IdGrado"></select>
                <span asp-validation-for="IdGrado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdInstitucion" class="control-label"></label>
                <select asp-for="IdInstitucion" class="form-control" asp-items="ViewBag.IdInstitucion"></select>
                <span asp-validation-for="IdInstitucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
