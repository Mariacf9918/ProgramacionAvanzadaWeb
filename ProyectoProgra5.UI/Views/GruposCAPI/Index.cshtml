
@model IEnumerable<ProyectoProgra5.UI.Models.Grupo>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros de Grupos</h1>

<p>
    <a asp-action="Create">Crear un nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdGrupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGrado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInstitucion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGrupo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGradoNavigation.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdInstitucionNavigation.NombreInstitucion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGrupo">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGrupo">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGrupo">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

