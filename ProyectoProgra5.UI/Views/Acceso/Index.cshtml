
@{
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container" style="margin-top: 10%">
        <form action="/Acceso/Index" method="post">
            <div class="row px-3 py-5 mx-auto shadow border" style="border-radius: 15px; width: 35%; height: 450px">
                <h5 class="mx-auto mb-2">INICIAR SESION</h5>
                <div class="col-12 my-1">
                  <input type="number" class="form-control" name="user" id="user" placeholder="Usuario" required>
                </div>
                <div class="col-12 my-1">
                     <input type="password" class="form-control" name="contrasena" id="contrasena" placeholder="Contraseña" required>
                </div>
                <div class="col-12 my-1">
                    <input type="submit" class="btn btn-success btn-block w-100" value="Iniciar sesión" />
                </div>
            </div>
        </form>
    </div>
            
</body>
</html>

