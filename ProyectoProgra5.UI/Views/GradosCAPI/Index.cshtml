
@model IEnumerable<ProyectoProgra5.UI.Models.Grado>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro de los Grados</h1>

<p>
    <a asp-action="Create">Crear un nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdGrado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInstitucion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGrado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdInstitucionNavigation.NombreInstitucion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdGrado">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdGrado">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdGrado">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
