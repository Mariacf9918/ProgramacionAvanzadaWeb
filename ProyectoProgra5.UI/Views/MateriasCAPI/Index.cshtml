
@model IEnumerable<ProyectoProgra5.UI.Models.Materia>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros de Materias</h1>

<p>
    <a asp-action="Create">Crear un nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdMateria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInstitucion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdMateria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdInstitucionNavigation.NombreInstitucion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdMateria">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdMateria">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdMateria">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

