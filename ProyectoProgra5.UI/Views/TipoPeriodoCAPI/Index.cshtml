
@model IEnumerable<ProyectoProgra5.UI.Models.TipoPeriodo>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros de los Tipo de Periodo</h1>

<p>
    <a asp-action="Create">Crear un nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPeriodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInstitucion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdPeriodo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdInstitucionNavigation.NombreInstitucion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPeriodo">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdPeriodo">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPeriodo">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
