
@model ProyectoProgra5.UI.Models.UsuarioXGrupo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Usuario por Grupo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUsuarioXgrupo" />
            <div class="form-group">
                <label asp-for="IdGrupo" class="control-label"></label>
                <select asp-for="IdGrupo" class="form-control" asp-items="ViewBag.IdGrupo"></select>
                <span asp-validation-for="IdGrupo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cedula" class="control-label"></label>
                <select asp-for="Cedula" class="form-control" asp-items="ViewBag.Cedula"></select>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

