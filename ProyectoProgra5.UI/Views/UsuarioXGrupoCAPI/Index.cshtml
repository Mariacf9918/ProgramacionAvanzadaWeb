@model IEnumerable<ProyectoProgra5.UI.Models.UsuarioXGrupo>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros </h1>

<p>
    <a asp-action="Create">Crear un nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdGrupo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CedulaNavigation.Cedula)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGrupoNavigation.IdGrupo)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUsuarioXgrupo">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdUsuarioXgrupo">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdUsuarioXgrupo">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

